<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.AgoraActivity">
    <Button
        android:id="@+id/btnSendInvitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Call Invitation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btnJoinCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Call"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnSendInvitation"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnSendMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Message"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnJoinCall"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnLeaveCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leave Call"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnSendMessage"
        android:layout_marginTop="20dp"/>
</RelativeLayout>